<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>Calibre Library</title>
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<style>
	body{
		padding-top: 70px;
	}
</style>
<body>
	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container-fluid">
			<form class="form-horizontal navbar-form" role="search" action="" method="GET">
				<input class="form-control" name="title" value="<%= title %>" type="text" placeholder="Title">
				<input class="form-control" name="author" value="<%= author %>" type="text" placeholder="Author">
				<% for(var f = 0 ; f < formats.split(',').length ; f++){ var format = formats.split(',')[f]  %>
				<div class="checkbox">
					<label>
						<input name="formats[<%= format %>]" type="checkbox"><%= format %>
					</label>
				</div>
				<% } %>
				<!--<div class="checkbox"><input type="checkbox"></div>-->
				<button type="submit" id="searchButton" class="btn btn-primary">Recherche</button>
			</form>
		</div>
	</nav>
	<ul class="pagination">
		<% for(var k = 0; k<pages;k++){ %>
			<% if(page==k) { %> 
			<li class="active">
			<% } else { %>
			<li>
			<% } %>
			<a href="<%= k %>"><%= k %></a>
		</li>
		<% } %>
	</ul>
	<ul class="media-list list-group">
		<% for(var i = 0 ; i<books.length ; i++ ){ var book = books[i]; %>
		<li class="list-group-item media">
			<a href="info/<%= book['id'] %>">
				<% if(book['cover']==1) { %><img class="media-object pull-left img-rounded" src="book/<%= book['path'] %>/cover.jpg" width="128" alt="">
				<% } else { %><img class="media-object pull-left img-rounded" src="public/DefaultCover.jpg" width="128" alt=""><% } %>
			</a>
			<div class="media-body">
				<a href="info/<%= book['id'] %>"><h3><%= book['title'] %></h3></a> <i>by <a href="?author=<%= book['author'] %>"><%= book['author'] %></a></i>
				<br>
				<% for(var j = 0; j<book['formats'].split(',').length;j++){ var format = book['formats'].split(',')[j]; %>
				<a class="btn btn-default" href="book/<%= book['path'] %>/<%= book['name'] %>.<%= format %>"><%= format %></a>
				<% } %>
			</div>
		</li>
		<% } %>
	</ul>	
	<!--<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.2/angular.min.js"></script>-->
	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="public/css/bootstrap.min.css">

	<!-- Optional theme -->
	<link rel="stylesheet" href="public/css/bootstrap-theme.min.css">

	<script src="public/jquery-1.11.1.min.js"></script>

	<!-- Latest compiled and minified JavaScript -->
	<script src="public/js/bootstrap.min.js"></script>
	<!--<script src="public/js/app.js"></script>-->
</body>
</html>